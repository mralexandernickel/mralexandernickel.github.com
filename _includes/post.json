{
  "title"    : "{{ post.title }}",
  "category" : "{{ post.category }}",
  "tags"     : [{% for tag in post.tags %}{% if forloop.first %}"{{ tag }}"{% else %},"{{ tag }}"{% endif %}{% endfor %}],
  "href"     : "{{ post.url }}",
  "author"   : "{{ post.author }}",
  "date_string": "{{ post.date | date_to_string }}",
  "content"  : "hello world",
  "date"     : {
    "day"   : "{{ post.date | date: "%d" }}",
    "month" : "{{ post.date | date: "%B" }}",
    "year"  : "{{ post.date | date: "%Y" }}"
  }
}